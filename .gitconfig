# Allows for user to be specified in seperate file, which is ignored by .gitignore
# for machine specific git user accounts
[include]
  path = ~/.gituser

[color]
  ui = auto
[core]
  excludesfile = /Users/gavinmiller/.gitignore_global
  editor = vimdiff
[alias]
  # Aliases borrowed heavily from:
  # https://github.com/garybernhardt/dotfiles/blob/master/.gitconfig
  st = status
  ci = commit
  co = checkout
  di = diff
  dc = diff --cached
  amend = commit --amend
  pom = push origin master
  pr = pull --rebase

  # Merge upstream into master
  merge-up = !git fetch upstream && git merge upstream/master && git pom

  tags = tag -n10

  # Fancy logging.
  #   r = recent commits, only current branch
  #   ra = recent commits, all reachable refs
  #   l = all commits, only current branch
  #   la = all commits, all reachable refs
  r = !git l -30
  ra = !git r --all
  l = "!source ~/.githelpers && pretty_git_log"
  la = !git l --all

  # Branch Output
  b = "!~/bin/gbrt"
[color "diff"]
	whitespace = red reverse
